@{
    ViewData["Title"] = "HelloWorld - Welcome";
}
<form method="get">
    <input type="hidden" name="numTimes" value="@(ViewBag.NumTimes+1)" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" name="Nome" id="Nome" value="@ViewBag.Nome">
    </div>

    <button type="submit" class="btn btn-primary mt-4">Incrementar</button>
</form>

<form method="get">
    <input type="hidden" class="form-control" name="Nome" id="Nome" value="@ViewBag.Nome">
    <input type="hidden" name="numTimes" value="0" />
    <button type="submit" class="btn btn-danger mt-4">Zerar</button>
</form>

@if(ViewBag.Nome != null)
{
    <div class="mt-5">
        Olá @ViewBag.Nome, número @ViewBag.NumTimes.
    </div>
}



